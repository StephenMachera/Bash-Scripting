Code
LOG_FILES_PATH= "/home/stephen-nyansoho-machera/Desktop/BashScripting/logs"
REPORT_FILE="/home/stephen-nyansoho-machera/Desktop/report.txt"

echo "An array that contain Error Patterns">"$REPORT_FILE"
ERROR_PATTERNS=("ERROR" "FATAL" "CRITICAL")
echo "$ERROR_PARTERNS">>"$REPORT_FILE"

echo -e "\n HERE ARE LOG FILES">>"$REPORT_FILE"
LOG_FILES=$(find $LOG_FILES_PATH -name "*log")
echo "$LOG_FILES">>"$REPORT_FILE"

for LOG_FILE in $LOG_FILES; do
    for PATTERN in ${ERROR_PATTERNS[@]}; do
        echo -e "\n $PATTERN Count in $LOG_FILE">>"$REPORT_FILE"
        echo "======================">>"$REPORT_FILE"
        grep -c "$PATTERN" "$LOG_FILE">>"$REPORT_FILE"
    done

done


